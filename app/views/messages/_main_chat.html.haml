.Chat-main
  .RightHeader
    .RightHeader__group
      .RightHeader__Name
      %ul.RightHeader__list
        %li.RightHeader__list__member
    = link_to 'Edit', '#', class: "RightHeader__edit"


  .MessageField
    .MessageBox
      .MessageInfo
        .MessageInfo__user
        .MessageInfo__date
      .Message
        %p.Message__test

  .Footer
    %form.Form
      .Form-text
        %input{type:"text",class: "Form-text__box", placeholder: "type a message"}
        %label{class:"Form-text__image"}
          = icon('fas', 'image')
          %input{type: "file", class: "Form-text__image__file"}
      %input{type:"submit", class:"submit", value:"Send"}
      

.Side-bar
  .LeftHeder
    .LeftHeder__Box
      %p.Name
        = current_user.name
      %ul.LeftHeder__Box__icon-box
        %li.icon-edit
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.icon-cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .GroupList
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), {class:"Group"} do
        .Group__name
          = group.name
        .Group__message
          = group.show_last_message

      

